{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "GraphSettings": {
    "MaxDataPoints": 100,
    "TimeWindow": 300,
    "Colors": [ "#FF6B6B", "#4ECDC4", "#45B7D1" ],
    "GridLines": true,
    "ShowLegend": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/plc-datacollector-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "RealTimeSettings": {
    "UpdateFrequency": 5,
    "CurrentTimeZone": "IST",
    "ShowLiveMetrics": true,
    "AlertThresholds": {
      "BehindSchedule": 5,
      "AheadSchedule": 10
    }
  },
  "ConnectionStrings": {
    "Temporary": "Data Source=MyDatabase.db",
    "Production": "Data Source=10.236.104.131:1521/MEAI; User Id=***********; Password=**************"
  },
  "LineDetails": {
    "EGRV_Final": {
      "LineName": "EGRV Final Line",
      "LineId": 1,
      "LineType": "Final",
      "PLC": {
        "FTP": "ftp://",
        "IP": "",
        "Port": "21",
        "Username": "admin",
        "Password": "admin",
        "FilePath": "/path/to/file"
      },
      "Data_Location": {
        "Lenght": 100,
        "Justifation": 52,
        "Part": 2,
        "Time": 10,
        "Part_Number": 1
      },
      "ShiftConfiguration": {
        "ShiftA": {
          "Name": "Shift A",
          "StartTime": "06:00",
          "EndTime": "14:30",
          "Color": "#4CAF50",
          "BreakTimes": [ "09:00-09:15", "12:00-12:30" ]
        },
        "ShiftB": {
          "Name": "Shift B",
          "StartTime": "14:30",
          "EndTime": "23:00",
          "Color": "#2196F3",
          "BreakTimes": [ "17:00-17:15", "20:00-20:30" ]
        },
        "ShiftC": {
          "Name": "Shift C",
          "StartTime": "23:00",
          "EndTime": "06:00",
          "Color": "#FF9800",
          "BreakTimes": [ "02:00-02:15", "05:00-05:15" ]
        }
      },
      "GraphSettings": {
        "RefreshInterval": 5000,
        "ShowCurrentTime": true,
        "CurrentTimeColor": "#FF0000",
        "GridInterval": 60,
        "ShowShiftBoundaries": true
      }
    }
  },
  "AllowedHosts": "*"
}