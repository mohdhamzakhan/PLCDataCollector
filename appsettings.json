{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "GraphSettings": {
    "MaxDataPoints": 100,
    "TimeWindow": 300,
    "Colors": [ "#FF6B6B", "#4ECDC4", "#45B7D1" ],
    "GridLines": true,
    "ShowLegend": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/plc-datacollector-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "RealTimeSettings": {
    "UpdateFrequency": 5,
    "CurrentTimeZone": "IST",
    "ShowLiveMetrics": true,
    "AlertThresholds": {
      "BehindSchedule": 5,
      "AheadSchedule": 10
    }
  },
  "ConnectionStrings": {
    "SourceDatabase": {
      "Development": "Data Source=plc_source.db",
      "Production": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=your-oracle-host)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=your-service)));User Id=your-username;Password=your-password;"
    },
    "TargetDatabase": {
      "Development": "Data Source=plc_target.db",
      "Production": "Data Source=plc_target.db"
    }
  },
  "DatabaseSettings": {
    "SourceType": {
      "Development": "SQLite",
      "Production": "Oracle"
    }
  },
  "DataSync": {
    "IntervalSeconds": 30,
    "BatchSize": 100,
    "MaxRetries": 3,
    "RetryDelaySeconds": 5,
    "EnableDetailedLogging": true
  },
  "LineDetails": {
    "EGRV_Final": {
      "LineName": "EGRV Final Line",
      "LineId": 1,
      "LineType": "Final",
      "PLC": {
        "FTP": "tcp",
        "IP": "192.168.3.11",
        "Port": "502",
        "Username": "itdomain",
        "Password": "Welcome.1234567890",
        "FilePath": "/ALL/ALL_NEW.CSV",
        "CycleTime": 6,
        "SkipLine" : 2
      },
      "Data_Location": {
        "Lenght": 100,
        "Justifation": 52,
        "Part": 2,
        "Time": 10,
        "Part_Number": 1
      },
      "ShiftConfiguration": {
        "ShiftA": {
          "Name": "Shift A",
          "StartTime": "06:00",
          "EndTime": "14:30",
          "Color": "#4CAF50",
          "BreakTimes": [ "09:00-09:15", "12:00-12:30" ]
        },
        "ShiftB": {
          "Name": "Shift B",
          "StartTime": "14:30",
          "EndTime": "23:00",
          "Color": "#2196F3",
          "BreakTimes": [ "17:00-17:15", "20:00-20:30" ]
        },
        "ShiftC": {
          "Name": "Shift C",
          "StartTime": "23:00",
          "EndTime": "06:00",
          "Color": "#FF9800",
          "BreakTimes": [ "02:00-02:15", "05:00-05:15" ]
        }
      },
      "GraphSettings": {
        "RefreshInterval": 5000,
        "ShowCurrentTime": true,
        "CurrentTimeColor": "#FF0000",
        "GridInterval": 60,
        "ShowShiftBoundaries": true
      }
    }
  },
  "AllowedHosts": "*"
}